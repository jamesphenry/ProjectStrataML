# Git LFS configuration
# Track large files for ML datasets, models, and artifacts

# Dataset files (images, audio, video, large text files)
datasets/**/*.* filter=lfs diff=lfs merge=lfs -text
datasets/**/*.png filter=lfs diff=lfs merge=lfs -text
datasets/**/*.jpg filter=lfs diff=lfs merge=lfs -text
datasets/**/*.jpeg filter=lfs diff=lfs merge=lfs -text
datasets/**/*.gif filter=lfs diff=lfs merge=lfs -text
datasets/**/*.wav filter=lfs diff=lfs merge=lfs -text
datasets/**/*.mp3 filter=lfs diff=lfs merge=lfs -text
datasets/**/*.mp4 filter=lfs diff=lfs merge=lfs -text
datasets/**/*.avi filter=lfs diff=lfs merge=lfs -text
datasets/**/*.csv filter=lfs diff=lfs merge=lfs -text
datasets/**/*.parquet filter=lfs diff=lfs merge=lfs -text
datasets/**/*.h5 filter=lfs diff=lfs merge=lfs -text
datasets/**/*.hdf5 filter=lfs diff=lfs merge=lfs -text

# Model files (PyTorch, TensorFlow, etc.)
models/**/*.* filter=lfs diff=lfs merge=lfs -text
models/**/*.pth filter=lfs diff=lfs merge=lfs -text
models/**/*.pt filter=lfs diff=lfs merge=lfs -text
models/**/*.pkl filter=lfs diff=lfs merge=lfs -text
models/**/*.pickle filter=lfs diff=lfs merge=lfs -text
models/**/*.joblib filter=lfs diff=lfs merge=lfs -text
models/**/*.onnx filter=lfs diff=lfs merge=lfs -text
models/**/*.pb filter=lfs diff=lfs merge=lfs -text
models/**/*.tflite filter=lfs diff=lfs merge=lfs -text
models/**/*.h5 filter=lfs diff=lfs merge=lfs -text
models/**/*.keras filter=lfs diff=lfs merge=lfs -text

# Raw data files
data/**/*.* filter=lfs diff=lfs merge=lfs -text
data/**/*.csv filter=lfs diff=lfs merge=lfs -text
data/**/*.json filter=lfs diff=lfs merge=lfs -text
data/**/*.parquet filter=lfs diff=lfs merge=lfs -text
data/**/*.h5 filter=lfs diff=lfs merge=lfs -text
data/**/*.hdf5 filter=lfs diff=lfs merge=lfs -text

# Run artifacts (large outputs)
runs/**/artifacts/**/*.* filter=lfs diff=lfs merge=lfs -text
runs/**/*.pkl filter=lfs diff=lfs merge=lfs -text
runs/**/*.pickle filter=lfs diff=lfs merge=lfs -text
runs/**/*.joblib filter=lfs diff=lfs merge=lfs -text
runs/**/*.png filter=lfs diff=lfs merge=lfs -text
runs/**/*.jpg filter=lfs diff=lfs merge=lfs -text
runs/**/*.jpeg filter=lfs diff=lfs merge=lfs -text
runs/**/*.pdf filter=lfs diff=lfs merge=lfs -text

# Large text files (>10MB)
*.large.csv filter=lfs diff=lfs merge=lfs -text
*.large.json filter=lfs diff=lfs merge=lfs -text
*.large.txt filter=lfs diff=lfs merge=lfs -text

# Binary archives
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text

# Model checkpoints and weights
*.ckpt filter=lfs diff=lfs merge=lfs -text
*.ckpt.* filter=lfs diff=lfs merge=lfs -text
*.weights filter=lfs diff=lfs merge=lfs -text
*.safetensors filter=lfs diff=lfs merge=lfs -text